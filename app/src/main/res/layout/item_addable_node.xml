<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.whoissio.arthings.src.views.adapters.AddableDevicesAdapter.DeviceNodeItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="@{() -> item.onClick()}"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            device_node="@{item.data}"
            android:contentDescription="@null"
            android:padding="8dp"
            tools:src="@drawable/img_solar_node"
            tools:background="@drawable/bg_ring_red"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>